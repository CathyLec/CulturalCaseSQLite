<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="espaciocultural.culturalcasesqlite.ItemLista">

    <TextView
        android:id="@+id/lblNombre"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:hint="Nombre del Museo"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="27dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lblNombre"
        android:layout_below="@+id/lblNombre"
        android:layout_marginTop="16dp"
        android:text="Telefono:" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="DirecciÃ³n:"
        android:layout_below="@+id/lblTelefono"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Localidad:"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Caracter:"
        android:layout_below="@+id/textView6"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="19dp"
        android:text="Uso principal:" />

    <TextView
        android:id="@+id/lblUso"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:fontFamily="casual"
        android:layout_alignBottom="@+id/textView8"
        android:layout_alignStart="@+id/lblCaracter" />

    <TextView
        android:id="@+id/lblCaracter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:fontFamily="casual"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/lblLocalidad" />

    <TextView
        android:id="@+id/lblLocalidad"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:fontFamily="casual"
        android:layout_above="@+id/textView7"
        android:layout_alignStart="@+id/lblDireccion" />

    <TextView
        android:id="@+id/lblDireccion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        tools:fontFamily="casual"
        android:layout_above="@+id/textView6"
        android:layout_alignStart="@+id/lblTelefono" />

    <TextView
        android:id="@+id/lblTelefono"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        tools:fontFamily="casual" />

</RelativeLayout>
